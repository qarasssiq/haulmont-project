<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://formBrowse.caption"
        focusComponent="formsTable"
        messagesPack="com.company.lib.web.screens.form">
    <data readOnly="true">
        <collection id="formsDc"
                    class="com.company.lib.entity.Form">
            <view extends="_local">
                <property name="book" view="_minimal">
                    <property name="library" view="_minimal"/>
                </property>
                <property name="reader" view="_minimal">
                    <property name="fullName"/>
                </property>
                <property name="employee" view="_minimal">
                    <property name="fullName"/>
                </property>
            </view>
            <loader id="formsDl">
                <query>
                    <![CDATA[select e from lib_Form e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="formsTable"
            spacing="true">
        <filter id="filter"
                applyTo="formsTable"
                dataLoader="formsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="formsTable"
                    width="100%"
                    dataContainer="formsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="book"/>
                <column id="reader"/>
                <column id="takenDate"/>
                <column id="broughtDate"/>
                <column id="employee"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="formsTable.create"/>
                <button id="editBtn" action="formsTable.edit"/>
                <button id="removeBtn" action="formsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
