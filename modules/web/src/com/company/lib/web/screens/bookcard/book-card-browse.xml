<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://bookCardBrowse.caption"
        focusComponent="bookCardsTable"
        messagesPack="com.company.lib.web.screens.bookcard">
    <data readOnly="true">
        <collection id="bookCardsDc"
                    class="com.company.lib.entity.BookCard">
            <view extends="_local">
                <property name="employee" view="_minimal"/>
                <property name="reader" view="_minimal"/>
            </view>
            <loader id="bookCardsDl">
                <query>
                    <![CDATA[select e from lib_BookCard e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="bookCardsTable"
            spacing="true">
        <filter id="filter"
                applyTo="bookCardsTable"
                dataLoader="bookCardsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="bookCardsTable"
                    width="100%"
                    dataContainer="bookCardsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="takenDate"/>
                <column id="broughtDate"/>
                <column id="reader"/>
                <column id="employee"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="bookCardsTable.create"/>
                <button id="editBtn" action="bookCardsTable.edit"/>
                <button id="removeBtn" action="bookCardsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
