<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://bookCardEdit.caption"
        focusComponent="form"
        messagesPack="com.company.lib.web.screens.bookcard">
    <data>
        <instance id="bookCardDc"
                  class="com.company.lib.entity.BookCard">
            <view extends="_local">
                <property name="employee" view="_minimal"/>
                <property name="reader" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="bookCardDc">
            <column width="350px">
                <dateField id="takenDateField" property="takenDate"/>
                <dateField id="broughtDateField" property="broughtDate"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
