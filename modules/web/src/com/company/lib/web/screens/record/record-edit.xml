<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://recordEdit.caption"
        focusComponent="form"
        messagesPack="com.company.lib.web.screens.record">
    <data>
        <instance id="recordDc"
                  class="com.company.lib.entity.Record">
            <view extends="_local">
                <property name="reader" view="_minimal"/>
                <property name="book" view="_minimal">
                    <property name="library" view="_minimal"/>
                </property>
                <property name="employee" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="recordDc">
            <column width="350px">
                <pickerField id="readerField" property="reader">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="takenDateField" property="takenDate"/>
                <dateField id="broughtDateField" property="broughtDate"/>
                <pickerField id="bookField" property="book">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="employeeField" property="employee">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
